<Page x:Class="Proyecto_Comunidad.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proyecto_Comunidad"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="Page4" Width="256" Height="504">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="NUMENTRANCES" Content="Dependencies" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" FontFamily="Montserrat"  />
        <Label Content="GateKeeper's apartement" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox x:Name="GATE" Content="" HorizontalAlignment="Left" Margin="210,75,0,0" VerticalAlignment="Top"/>
        <Label Content="Communal showers and toilets" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox x:Name="SHOWERS" Content="" HorizontalAlignment="Left" Margin="210,109,0,0" VerticalAlignment="Top"/>
        <Label Content="Communal play area" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox x:Name="PLAYAREA" Content="" HorizontalAlignment="Left" Margin="210,143,0,0" VerticalAlignment="Top"/>
        <Label Content="Communal Exercice area" HorizontalAlignment="Left" Margin="10,169,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox x:Name="GYM" Content="" HorizontalAlignment="Left" Margin="210,177,0,0" VerticalAlignment="Top"/>
        <Label Content="Communal Metting room" HorizontalAlignment="Left" Margin="10,209,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox x:Name="MEETING" Content="" HorizontalAlignment="Left" Margin="210,217,0,0" VerticalAlignment="Top"/>
        <Label Content="Communal Tennis Court" HorizontalAlignment="Left" Margin="10,243,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox x:Name="TENNIS" Content="" HorizontalAlignment="Left" Margin="210,251,0,0" VerticalAlignment="Top"/>
        <Label Content="Communal Padel Court" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox x:Name="PADEL" Content="" HorizontalAlignment="Left" Margin="210,285,0,0" VerticalAlignment="Top"/>
        <Label Content="GateKeeper's apartement" HorizontalAlignment="Left" Margin="10,311,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Montserrat"/>
        <CheckBox Content="" HorizontalAlignment="Left" Margin="210,319,0,0" VerticalAlignment="Top"/>
        <Button x:Name="NEXT"                          
            BorderThickness="0"
            Content="SAVE"
            Foreground="White"
            FontSize="12"
            FontFamily="Montserrat"
            Cursor="Hand"
            Click="NEXT_Click" Margin="18,400,18,10">

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#462AD8"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#28AEED"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="150" Height="40"
                        CornerRadius="20"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
